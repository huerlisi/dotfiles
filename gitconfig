[user]
	name = Markus Koller
	email = markus-koller@gmx.ch

[core]
	excludesfile = ~/.gitexcludes

[color]
	ui = auto

[advice]
	statusHints = false

[diff]
	renames = copies
	mnemonicprefix = true

[difftool]
	prompt = false

[merge]
	stat = true
	tool = gvimdiff

[mergetool]
	prompt = false
	keepBackup = false

[alias]
	h = help
	sub = submodule

	di = diff
	st = status
	stat = status
	ls = branch -av

	br = branch
	co = checkout
	sw = checkout
	un = reset HEAD
	unstage = reset HEAD

	ci = commit -v
	ca = commit -va
	amend = commit -v --amend

	new = !sh -c 'PAGER= git log --pretty=format:\"%C(yellow)%h%Creset - %Cred%an%Creset - %C(cyan)%s%Creset (%ar)\" HEAD@{1}.. && echo'
	up = !sh -c 'git pull --prune && git new'
