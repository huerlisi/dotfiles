# Load Byobu
setenv BYOBU_BACKEND screen
setenv BYOBU_PREFIX $HOME/.byobu
setenv BYOBU_CONFIG_DIR $HOME/.byobu
setenv BYOBU_RUN_DIR $HOME/.byobu
source $BYOBU_PREFIX/profile

# Default windows
shell -bash
screen -t shell 0 -bash

# Keybindings
escape ^``

bindkey \033OQ stuff /
bindkey \033OR stuff *
bindkey \033OS stuff -
bindkey \033Ol stuff +
bindkey \033OM stuff ""
