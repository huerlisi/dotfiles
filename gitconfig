[user]
	name = Markus Koller
	email = markus-koller@gmx.ch

[core]
	excludesfile = ~/.gitexcludes

[color]
	ui = auto

[advice]
	statusHints = false

[diff]
	renames = copies
	mnemonicprefix = true

[difftool]
	prompt = false

[merge]
	stat = true
	tool = gvimdiff

[mergetool]
	prompt = false
	keepBackup = false

[alias]
	h = help
	r = remote
	sub = submodule

	di = diff
	st = status
	stat = status
	ls = branch -av

	br = branch
	co = checkout
	sw = checkout
	un = reset HEAD
	unstage = reset HEAD

	ci = commit -v
	ca = commit -va
	amend = commit -v --amend

	logstat = log --stat
	logdiff = log -p
	oneline = log --pretty=format:\"%C(yellow)[%h]%Creset %Cred%an:%Creset %C(cyan)%s%Creset (%ar)\"
	new = !sh -c 'git oneline HEAD@{1}.. | grep --color=never .'
	newdiff = log -p HEAD@{1}..

	reup = remote update
	up = merge HEAD@{u}
