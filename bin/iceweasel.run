#!/bin/sh
if pgrep -x iceweasel >/dev/null; then
  if [ $# -eq 0 ]; then
    xwit -raise -focus -property WM_CLASS -names Navigator
  else
    iceweasel "$@" &>/dev/null &
  fi
else
  sqlite3 ~/.mozilla/firefox/default/content-prefs.sqlite 'DELETE FROM prefs WHERE settingID = 1'
  iceweasel "$@" &>/dev/null &
fi
