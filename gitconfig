[user]
	name = Markus Koller
	email = markus-koller@gmx.ch

[core]
	eol = lf
	autocrlf = input
	excludesfile = ~/.gitexcludes

[color]
	ui = auto

[advice]
	statusHints = false

[diff]
	renames = copies
	mnemonicprefix = true

[difftool]
	prompt = false

[merge]
	stat = true
	tool = gvimdiff

[mergetool]
	prompt = false
	keepBackup = false

[rebase]
	stat = true

[alias]
	h = help
	r = remote
	sub = submodule

	di = diff
	st = status
	stat = status
	ls = branch -av

	br = branch
	co = checkout
	sw = checkout
	un = reset HEAD
	unstage = reset HEAD

	ci = commit -v
	ca = commit -va
	amend = commit -v --amend

	logstat = log --stat
	logdiff = log -p
	oneline = log --pretty=format:\"%C(yellow)[%h]%Creset %Cred%an:%Creset %C(cyan)%s%Creset (%ar)\"
	new = "!git oneline HEAD@{1}.. | grep --color=never ."
	news = log -p HEAD@{1}..

	up = pull -v --progress
	pu = push -v --progress
	ff = merge HEAD@{u}
	upbase = "!git stash save -q; git pull -v --progress --rebase; git stash pop -q"
	reup = remote update

	tig = "!tig"
	gitg = "!gitg"
	gitx = "!gitx"
